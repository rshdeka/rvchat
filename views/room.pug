doctype html 
html 
  head 
    title RVchat
    style 
       include ../public/style.css 
    
    script(src="/socket.io/socket.io.js")
    script(src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js")
    script(src="https://kit.fontawesome.com/c939d0e917.js")

    script(src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" integrity="sha256-KzZiKy0DWYsnwMF+X1DvQngQ2/FxF7MF3Ff72XcpuPs=" crossorigin="anonymous")

    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous")

    body 
        section#navbar 
            h1 RVchat 
            div#logo
                img(src="/public/logo1.png")

        div.container 
            div.main_left 
                div.main_video
                    div.select 
                        div#filter 
                            label(for="filter") Filters: 
                            select(name="filter" id="filter-box")
                                option(value="none") Normal
                                option(value="grayscale(100%)") BnW 
                                option(value="sepia(100%)" id="gray") Creamy 
                                option(value="contrast(150%)") Lumination 
                                option(value="blur(8px)") Hidden Mist  
                                option(value="invert(100%)") Horrorish 
                                option(value="hue-rotate(180deg)") Orange Tan 
                                option(value="saturate(25)") Life in colors  
                                
                    div#video-grid

                div.main_controls 
                    div.main_options
                        div(class="main_controls_button main_mute_button" onclick="muteUnmute()")
                            i(class="fas fa-microphone")
                            span Mute 
                        div(class="main_controls_button main_video_button" onclick="playStop()")
                            i(class="fas fa-video")
                            span Stop Video 
                    
                    div.main_options 
                        div.main_controls_button
                            i(class="fas fa-phone-slash" id="end")
                            span(class="leave") End Call 

            div.main_right 
                div.main_chat 
                    h6 Chat Space 
                div.main_chat_window  
                    div.hi
                        ul.msg 
                
                div.messageSendingTo
                    i(class="fas fa-angle-down" id="angledown")
                    span(class="angle") To Everyone

                div(class="main_msg_container" id="send-container")
                    input(type="text", id="chatMsg", placeholder="Type your message here...")

    script 
       | const room_id = "roomId"
       
    script
        include ../public/client.js 